<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AddressBookMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AddressBookMaui"
    
    xmlns:pages="clr-namespace:AddressBookMaui.Views"
    
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="AddressBookMaui">

    <ShellContent Title="Contact List" ContentTemplate="{DataTemplate pages:ContactListPage}" Route="ContactListPage" />
    <ShellContent Title="Add Contact" ContentTemplate="{DataTemplate pages:AddContactPage}" Route="AddContactPage" />
    <ShellContent Title="Update Contact" ContentTemplate="{DataTemplate pages:UpdateContactPage}" Route="UpdateContactPage" />

</Shell>
